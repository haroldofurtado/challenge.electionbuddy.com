<p id="notice"><%= notice %></p>

<h1>Answer Audits</h1>

<table>
  <thead>
    <tr>
      <th>Action</th>
      <th>Log</th>
      <th>User</th>
      <th>At</th>
    </tr>
  </thead>

  <tbody>
    <% @audits.each do |audit| %>
      <tr>
        <td><%= audit.action %></td>
        <td><%= audit.content %></td>
        <td><%= audit.responsible_user %></td>
        <td><%= audit.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', answer_path(@answer) %>
